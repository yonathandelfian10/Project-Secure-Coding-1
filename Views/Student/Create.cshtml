@model SampleSecureWeb.Models.Student

<form asp-action="Create" method="post">
    <div class="form-horizontal">
        <h4>Create Student</h4>
        <hr />

        <div class="form-group row">
            <label asp-for="Nim" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nim" class="form-control" />
                <span asp-validation-for="Nim" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="FullName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-10">
            <input type="submit" class="btn btn-primary btn-sm" value="Create" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
